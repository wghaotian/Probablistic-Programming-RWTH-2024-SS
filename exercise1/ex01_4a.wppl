var n = 100
var samples_in_circle = function (m) { 
	var x = uniform(-1, 1)
	var y = uniform(-1, 1)
	var in_circle = (x*x + y*y <= 1)
	if (m == 0) return in_circle
	return samples_in_circle(m-1) + in_circle
}
var approx_of_pi = function() {return (4 * samples_in_circle(n)) / n}
// Optional for plotting the distribution
var distr_approx_of_pi = Infer(
{method: 'rejection', samples: 2000}, approx_of_pi)
viz.auto(distr_approx_of_pi)
approx_of_pi()